<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TMDB Movie Tree View -->
        <record id="view_tmdb_movie_tree" model="ir.ui.view">
            <field name="name">tmdb.movie.list</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <list string="TMDB Movies">
                    <field name="tmdb_id"/>
                    <field name="title"/>
                    <field name="director"/>
                    <field name="genre_ids" widget="many2many_tags"/>
                    <field name="release_date"/>
                    <field name="vote_average"/>
                    <field name="popularity"/>
                    <field name="last_sync"/>
                    <field name="recommendation_score"/>
                    <field name="age_category"/>
                    <field name="popularity_category"/>
                </list>
            </field>
        </record>

        <!-- TMDB Movie Form View -->
        <record id="view_tmdb_movie_form" model="ir.ui.view">
            <field name="name">tmdb.movie.form</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <form string="TMDB Movie">
                    <header>
                        <button name="sync_from_tmdb" string="Sync from TMDB" type="object" 
                                class="oe_highlight" invisible="tmdb_id == False"/>
                        <button name="update_director_from_tmdb" string="Update Director" type="object" 
                                class="btn-secondary" invisible="tmdb_id == False"/>
                        <button name="create_director_contact_from_field" string="Create Director Contact" type="object" 
                                class="btn-info" invisible="director == False or director_id != False"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="tmdb_id"/>
                                <field name="title"/>
                                <field name="original_title"/>
                                <field name="director"/>
                                <field name="release_date"/>
                            </group>
                            <group>
                                <field name="vote_average"/>
                                <field name="vote_count"/>
                                <field name="popularity"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="age_category"/>
                                <field name="popularity_category" readonly="0"/>
                                <field name="recommendation_score"/>
                            </group>
                        </group>
                        <group>
                            <field name="overview" placeholder="Movie overview..."/>
                        </group>
                        <group>
                            <field name="poster_path"/>
                            <field name="backdrop_path"/>
                            <field name="last_sync"/>
                            <field name="genre_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TMDB Movie Search View -->
        <record id="view_tmdb_movie_search" model="ir.ui.view">
            <field name="name">tmdb.movie.search</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <search string="Search TMDB Movies">
                    <field name="title"/>
                    <field name="director"/>
                    <field name="genre_ids"/>
                    <field name="tmdb_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Action" name="action_genre" domain="[('genre_ids.name', '=', 'Action')]"/>
                    <filter string="Comedy" name="comedy_genre" domain="[('genre_ids.name', '=', 'Comedy')]"/>
                    <filter string="Drama" name="drama_genre" domain="[('genre_ids.name', '=', 'Drama')]"/>
                    <filter string="Horror" name="horror_genre" domain="[('genre_ids.name', '=', 'Horror')]"/>
                    <filter string="Romance" name="romance_genre" domain="[('genre_ids.name', '=', 'Romance')]"/>
                    <filter string="Thriller" name="thriller_genre" domain="[('genre_ids.name', '=', 'Thriller')]"/>
                    <filter string="Sci-Fi" name="scifi_genre" domain="[('genre_ids.name', '=', 'Science Fiction')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Release Date" name="group_by_date" context="{'group_by': 'release_date:month'}"/>
                        <filter string="Vote Average" name="group_by_vote" context="{'group_by': 'vote_average'}"/>
                        <filter string="Genre" name="group_by_genre" context="{'group_by': 'genre_ids'}"/>
                        <filter string="Director" name="group_by_director" context="{'group_by': 'director'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- TMDB Movie Action -->
        <record id="action_tmdb_movie" model="ir.actions.act_window">
            <field name="name">TMDB Movies</field>
            <field name="res_model">tmdb.movie</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No movies found!
                </p>
                <p>
                    Sync movies from TMDB to get started.
                </p>
            </field>
        </record>

        <!-- Action button for Data Cleanup -->
        <record id="action_tmdb_cleanup_from_movies" model="ir.actions.act_window">
            <field name="name">Data Cleanup Wizard</field>
            <field name="res_model">tmdb.data.cleanup.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Sync All Contacts Action -->
        <record id="action_sync_all_contacts" model="ir.actions.server">
            <field name="name">Sync Contacts</field>
            <field name="model_id" ref="model_tmdb_movie"/>
            <field name="state">code</field>
            <field name="code">
                action = model.sync_all_contacts()
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_tmdb_root" 
                  name="TMDB" 
                  web_icon="fa-film"
                  sequence="10"/>

        <menuitem id="menu_tmdb_movie" 
                  name="Movies" 
                  parent="menu_tmdb_root" 
                  action="action_tmdb_movie" 
                  sequence="10"/>

        <menuitem id="menu_tmdb_sync_contacts" 
                  name="Sync Contacts" 
                  parent="menu_tmdb_root" 
                  action="action_sync_all_contacts" 
                  sequence="20"/>

        <menuitem id="menu_tmdb_cleanup" 
                  name="Data Cleanup" 
                  parent="menu_tmdb_root" 
                  action="action_tmdb_cleanup_from_movies" 
                  sequence="30"/>
    </data>
</odoo> 