<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredar la vista de formulario de res.partner -->
        <record id="view_partner_form_inherit_tmdb" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.tmdb</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_director"/>
                    <field name="is_actor"/>
                </xpath>
                
                <!-- Agregar página para películas dirigidas si es director -->
                <xpath expr="//notebook" position="inside">
                    <page string="Películas Dirigidas" invisible="not is_director">
                        <group>
                            <field name="total_directed_movies"/>
                        </group>
                        <field name="directed_movies_ids">
                            <list>
                                <field name="title"/>
                                <field name="release_date"/>
                                <field name="vote_average"/>
                                <field name="popularity"/>
                            </list>
                        </field>
                    </page>
                    <page string="Películas Actuadas" invisible="not is_actor">
                        <group>
                            <field name="total_acted_movies"/>
                        </group>
                        <field name="acted_movies_ids">
                            <list>
                                <field name="title"/>
                                <field name="release_date"/>
                                <field name="vote_average"/>
                                <field name="popularity"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

