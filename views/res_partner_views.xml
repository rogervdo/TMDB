        <!-- Acción para ver solo directores -->
        <record id="action_partner_directors" model="ir.actions.act_window">
            <field name="name">Directores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_director', '=', True)]</field>
            <field name="context">{'default_is_director': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primer director!
                </p>
                <p>
                    Aquí puedes gestionar todos los directores de películas.
                </p>
            </field>
        </record>

        <!-- Menú para directores -->
        <menuitem id="menu_partner_directors"
                  name="Directores"
                  parent="contacts.menu_contacts"
                  action="action_partner_directors"
                  sequence="15"/>

